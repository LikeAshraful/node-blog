<section class="is-hero-bar">
  <div
    class="flex flex-col md:flex-row items-center justify-between space-y-6 md:space-y-0"
  >
    <h1 class="title">Posts</h1>
    <a href="/post/create" class="button light">Create New Post</a>
  </div>
</section>

<section class="section main-section">

  <div class="card has-table">
    <div class="card-content">
      <table>
        <thead>
          <tr>
            <th class="checkbox-cell">
              <label class="checkbox">
                <input type="checkbox" />
                <span class="check"></span>
              </label>
            </th>
            <th class="image-cell"></th>
            <th>Title</th>
            <th>Description</th>
            <th>Category</th>
            <th>Tags</th>
            <th>Created</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% posts.forEach(function(post) { %>
          <tr>
            <td class="checkbox-cell">
              <label class="checkbox">
                <input type="checkbox" />
                <span class="check"></span>
              </label>
            </td>
            <td class="image-cell">
              <div class="image">
                <img
                  src="https://avatars.dicebear.com/v2/initials/rebecca-bauch.svg"
                  class="rounded-full"
                />
              </div>
            </td>
            <td><a href="/posts/<%= post._id %>"><%= post.title %></a></td>
            <td><%= post.content.substring(0, 100) %>...</td>
            <td>
              <%= post.category ? post.category.title : '' %>
            </td>
            <td>
              Tags: <% post.tags.forEach(function(tag) { %>
              <span><%= tag %></span>
              <% }); %>
            </td>
            <td data-label="Created">
              <small class="text-gray-500" title="<%= post.createdAt  %>">             
                <%= post.createdAt.toISOString().split('T')[0] %>
            </small>
            </td>
            <td class="actions-cell">
              <div class="buttons nowrap">
                <a
                  class="button small blue --jb-modal"
                  href="/posts/<%= post._id %>"
                  type="button"
                >
                  <span class="icon"><i class="mdi mdi-eye"></i></span>
                </a>
                <button
                  class="button small red --jb-modal"
                  data-target="sample-modal"
                  type="button"
                >
                  <span class="icon"><i class="mdi mdi-trash-can"></i></span>
                </button>
              </div>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>

      <!-- <div class="table-pagination">
        <div class="flex items-center justify-between">
          <div class="buttons">
            <button type="button" class="button active">1</button>
            <button type="button" class="button">2</button>
            <button type="button" class="button">3</button>
          </div>
          <small>Page 1 of 3</small>
        </div>
      </div> -->
    </div>
  </div>
</section>
